<h2><%= @burn.name %></h2>

<div class="list-group">
  <% @burn.events.each do |event| %>
    <%= link_to event.title, burn_event_path(@burn, event), class: "list-group-item" %>
  <% end %>
</div>

<% if admin_signed_in? && @burn.admin == current_admin %>
  <%= link_to "Edit burn", edit_burn_path(@burn) %> |
  <%= link_to "Delete burn", burn_path(@burn), method: :delete, data: { confirm: "Are you sure you want to delete this burn?" } %>
<% end %>